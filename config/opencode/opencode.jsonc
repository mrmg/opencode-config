// ============================================================================
// OPENCODE CONFIGURATION
// ============================================================================
//
// Personal (default): oh-my-opencode-slim pantheon — cost-optimized
//   orchestrator  → Kimi K2.5 TEE (Chutes)
//   explorer      → GPT-5.1-Codex-Mini (Copilot, 0.33x)
//   librarian     → Gemini 3 Flash (Copilot, 0.33x)
//   oracle        → Pony Alpha (OpenRouter, FREE)
//   designer      → Kimi K2.5 TEE (Chutes)
//   fixer         → GPT-5.1-Codex-Mini (Copilot, 0.33x)
//
// Kato (preset): oh-my-opencode-slim pantheon — premium (Copilot ≤1x)
//   orchestrator  → GPT-5.2 Codex (Copilot, 1x)
//   explorer      → GPT-5.1-Codex-Mini (Copilot, 0.33x)
//   librarian     → Gemini 3 Pro (Copilot, 1x)
//   oracle        → Claude Sonnet 4.5 (Copilot, 1x)
//   designer      → Claude Sonnet 4.5 (Copilot, 1x)
//   fixer         → GPT-5.2 Codex (Copilot, 1x)
//
// Activate Kato: OH_MY_OPENCODE_SLIM_PRESET=kato opencode
//
// Copilot multiplier reference:
//   0x:   GPT-4.1, GPT-4o, GPT-5 mini, Raptor mini
//   0.25x: Grok Code Fast 1
//   0.33x: Claude Haiku 4.5, Gemini 3 Flash, GPT-5.1-Codex-Mini
//   1x:   Sonnet 4/4.5, Gemini 3 Pro, GPT-5/5.1/5.2/Codex variants
//   3x:   Claude Opus 4.5/4.6 — avoid
//   10x:  Claude Opus 4.1 — never
// ============================================================================

{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoupdate": true,

  // ============================================================================
  // AGENTS
  // ============================================================================
  "agent": {

    // --- Pony Alpha: FREE frontier primary agent ---

    "pony": {
      "model": "openrouter/openrouter/pony-alpha",
      "temperature": 0.2,
      "mode": "primary",
      "description": "Pony Alpha — FREE Opus-class model (200K context). Data logged, personal use only."
    },

    // --- Testing: Frontier models as subagents (OpenRouter, pay-per-token) ---

    "test-opus": {
      "model": "openrouter/anthropic/claude-opus-4.6",
      "temperature": 0.2,
      "mode": "subagent",
      "description": "Test: Claude Opus 4.6 — Frontier reasoning ($5/$25 per 1M)"
    },

    "test-sonnet": {
      "model": "openrouter/anthropic/claude-sonnet-4.5",
      "temperature": 0.2,
      "mode": "subagent",
      "description": "Test: Claude Sonnet 4.5 — Strong coding ($3/$15 per 1M)"
    },

    "test-codex": {
      "model": "openrouter/openai/gpt-5.2-codex",
      "temperature": 0.2,
      "mode": "subagent",
      "description": "Test: GPT-5.2 Codex — Frontier coding ($1.75/$14 per 1M)"
    },

    "test-gpt52": {
      "model": "openrouter/openai/gpt-5.2",
      "temperature": 0.2,
      "mode": "subagent",
      "description": "Test: GPT-5.2 — Frontier reasoning ($1.75/$14 per 1M)"
    },

    "test-gemini-pro": {
      "model": "openrouter/google/gemini-3-pro-preview",
      "temperature": 0.2,
      "mode": "subagent",
      "description": "Test: Gemini 3 Pro — Frontier multimodal ($2/$12 per 1M)"
    },

    "test-grok4": {
      "model": "openrouter/x-ai/grok-4",
      "temperature": 0.2,
      "mode": "subagent",
      "description": "Test: Grok 4 — xAI frontier model"
    },

    "test-pony": {
      "model": "openrouter/openrouter/pony-alpha",
      "temperature": 0.2,
      "mode": "subagent",
      "description": "Test: Pony Alpha — FREE Opus-class subagent (data logged, personal only)"
    }
  },

  // ============================================================================
  // PLUGINS
  // ============================================================================
  "plugin": [
    "oh-my-opencode-slim@latest",
    "opencode-chutes@latest"
  ],

  // ============================================================================
  // MCP SERVERS
  // ============================================================================
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest", "--isolated=true"]
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "atlassian": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ]
    }
  },

  // ============================================================================
  // PROVIDERS
  // ============================================================================
  "provider": {
    "chutes": {
      "name": "Chutes.ai",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "https://api.chutes.ai/v1"
      },
      "models": {
        "moonshotai/Kimi-K2.5-TEE": {
          "name": "Kimi K2.5 TEE",
          "description": "Best value coding model, 262K context, agent swarm capable"
        }
      }
    }
  },

  // ============================================================================
  // SERVER CONFIG
  // ============================================================================
  "server": {
    "port": 4096
  }
}
