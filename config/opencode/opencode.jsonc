  // ============================================================================
  // OPENCODE CONFIGURATION
  // ============================================================================
  //
  // Agent models are defined in oh-my-opencode.json
  //   main agents → Copilot (GPT-5.2 Codex, Gemini 3 Flash)
  //   non-Copilot → Chutes (GLM-5-TEE, Kimi-K2.5-TEE)
  //
  // Copilot multiplier reference:
  //   0x:   GPT-4.1, GPT-4o, GPT-5 mini, Raptor mini
  //   0.25x: Grok Code Fast 1
  //   0.33x: Claude Haiku 4.5, Gemini 3 Flash, GPT-5.1-Codex-Mini
  //   1x:   Sonnet 4/4.5, Gemini 3 Pro, GPT-5/5.1/5.2/Codex variants
  //   3x:   Claude Opus 4.5/4.6 — avoid
  //   10x:  Claude Opus 4.1 — never
  // ============================================================================

{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoupdate": true,

  // ============================================================================
  // AGENTS
  // ============================================================================
  "agent": {

    // --- Pony Alpha: FREE frontier primary agent ---

    "pony": {
      "model": "openrouter/openrouter/pony-alpha",
      "temperature": 0.2,
      "mode": "primary",
      "description": "Pony Alpha — FREE Opus-class model (200K context). Data logged, personal use only."
    },

    // --- Testing: Frontier models as subagents (OpenRouter, pay-per-token) ---

    "test-opus": {
      "model": "openrouter/anthropic/claude-opus-4.6",
      "temperature": 0.2,
      "mode": "subagent",
      "description": "Test: Claude Opus 4.6 — Frontier reasoning ($5/$25 per 1M)"
    },

    "test-sonnet": {
      "model": "openrouter/anthropic/claude-sonnet-4.5",
      "temperature": 0.2,
      "mode": "subagent",
      "description": "Test: Claude Sonnet 4.5 — Strong coding ($3/$15 per 1M)"
    },

    "test-codex": {
      "model": "openrouter/openai/gpt-5.2-codex",
      "temperature": 0.2,
      "mode": "subagent",
      "description": "Test: GPT-5.2 Codex — Frontier coding ($1.75/$14 per 1M)"
    },

    "test-gpt52": {
      "model": "openrouter/openai/gpt-5.2",
      "temperature": 0.2,
      "mode": "subagent",
      "description": "Test: GPT-5.2 — Frontier reasoning ($1.75/$14 per 1M)"
    },

    "test-gemini-pro": {
      "model": "openrouter/google/gemini-3-pro-preview",
      "temperature": 0.2,
      "mode": "subagent",
      "description": "Test: Gemini 3 Pro — Frontier multimodal ($2/$12 per 1M)"
    },

    "test-grok4": {
      "model": "openrouter/x-ai/grok-4",
      "temperature": 0.2,
      "mode": "subagent",
      "description": "Test: Grok 4 — xAI frontier model"
    },

    "test-pony": {
      "model": "openrouter/openrouter/pony-alpha",
      "temperature": 0.2,
      "mode": "subagent",
      "description": "Test: Pony Alpha — FREE Opus-class subagent (data logged, personal only)"
    }
  },

  // ============================================================================
  // PLUGINS
  // ============================================================================
  "plugin": [
    "oh-my-opencode@latest",
    "opencode-antigravity-auth@1.5.1"
  ],

  // ============================================================================
  // MCP SERVERS
  // ============================================================================
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest", "--isolated=true"]
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "atlassian": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.atlassian.com/v1/sse"
      ]
    }
  },

  // ============================================================================
  // PROVIDERS
  // ============================================================================
  "provider": {
    "nano-gpt": {
      "name": "NanoGPT",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "https://nano-gpt.com/api/subscription/v1"
      },
      "models": {
        "moonshotai/kimi-k2.5": {
          "name": "Kimi K2.5",
          "description": "Best value coding model on NanoGPT, 256K context"
        },
        "moonshotai/kimi-k2.5:thinking": {
          "name": "Kimi K2.5 Thinking",
          "description": "Kimi K2.5 with reasoning enabled"
        },
        "deepseek/deepseek-v3.2": {
          "name": "DeepSeek V3.2",
          "description": "GPT-5 class reasoning model"
        },
        "deepseek/deepseek-v3.2:thinking": {
          "name": "DeepSeek V3.2 Thinking",
          "description": "DeepSeek V3.2 with thinking mode"
        },
        "deepseek/deepseek-r1": {
          "name": "DeepSeek R1",
          "description": "Reasoning model for complex tasks"
        },
        "zai-org/glm-4.7": {
          "name": "GLM 4.7",
          "description": "Fast, cost-effective general purpose model"
        }
      }
    },
    "zai": {
      "name": "Z.AI",
      "npm": "@ai-sdk/anthropic",
      "options": {
        "baseURL": "https://api.z.ai/api/anthropic/v1"
      },
      "models": {
        "glm-4.7": {
          "name": "GLM 4.7",
          "description": "Z.AI GLM 4.7 - Strong coding model"
        },
        "glm-4.5": {
          "name": "GLM 4.5",
          "description": "Z.AI GLM 4.5 - Fast and capable"
        },
        "glm-4.5-air": {
          "name": "GLM 4.5 Air",
          "description": "Z.AI GLM 4.5 Air - Cost-effective"
        }
      }
    },
    "google": {
      "name": "Google",
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65535
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "thinkingLevel": "low"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash (Antigravity)",
          "limit": {
            "context": 1048576,
            "output": 65536
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "minimal": {
              "thinkingLevel": "minimal"
            },
            "low": {
              "thinkingLevel": "low"
            },
            "medium": {
              "thinkingLevel": "medium"
            },
            "high": {
              "thinkingLevel": "high"
            }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5 (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          }
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 8192
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768
              }
            }
          }
        },
        "antigravity-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking (Antigravity)",
          "limit": {
            "context": 200000,
            "output": 64000
          },
          "modalities": {
            "input": [
              "text",
              "image",
              "pdf"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "thinkingConfig": {
                "thinkingBudget": 8192
              }
            },
            "max": {
              "thinkingConfig": {
                "thinkingBudget": 32768
              }
            }
          }
        }
      }
    }
  },

  // ============================================================================
  // SERVER CONFIG
  // ============================================================================
  "server": {
    "port": 4096
  }
}
